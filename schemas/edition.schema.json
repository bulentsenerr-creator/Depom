{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Edition",
  "type": "object",
  "required": [
    "isbn13",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "isbn13": {
      "type": "string",
      "pattern": "^[0-9]{13}$"
    },
    "isbn10": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "translators": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "language": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "publisher": {
      "type": "string"
    },
    "editionStatement": {
      "type": "string"
    },
    "publishedDate": {
      "type": "string"
    },
    "pageCount": {
      "type": "integer"
    },
    "format": {
      "type": "string"
    },
    "coverRemoteUrl": {
      "type": "string"
    },
    "coverLocalDataUrl": {
      "type": "string"
    },
    "createdAt": {
      "type": "string"
    },
    "updatedAt": {
      "type": "string"
    }
  },
  "additionalProperties": true
}